%div.card
  %h3.card-header= t('page_title.wrapup')
  %div.card-body
    %p= markdown(t('page_subtitle.wrapup_info'))
    %hr
    = markdown(@content, escape_html: false)

%p.clearfix
  %div.float-right.btn-group.steps-container
    = link_to download_path, class: "btn btn-primary" do
      %i.eos-icons= Rails.configuration.x.sidebar_icons[:download]
      = t('sidebar.download')
%p.clearfix
